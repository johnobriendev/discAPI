extends layout 

block content 

  h1= title 

  p #[strong Color:] #{discinstance.color} 
  p #[strong Weight:] #{discinstance.weight + "g"}
  p #[strong Price:] #{"$" + discinstance.price}

  if discinstance.photo
    p
      img(src=discinstance.photo alt='Disc Photo' width='300')


  hr
  p
   a(href=discinstance.url+'/delete') Delete discinstance

  p
   a(href=discinstance.url+'/update') Update discinstance